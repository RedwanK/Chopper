{% extends 'layout-sports.html.twig' %}

{% block title %}{{ 'app.global.exercise'|trans }}{% endblock %}

{% block content %}
    <h1>{{ 'app.global.exercise'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ exercise.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ exercise.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ exercise.description }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ exercise.duration }}</td>
            </tr>
            <tr>
                <th>Repetition</th>
                <td>{{ exercise.repetition }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ exercise.type }}</td>
            </tr>
            <tr>
                <th>Zone</th>
                <td>{{ exercise.zone }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('exercise_index') }}">back to list</a>

    <a href="{{ path('exercise_edit', {'id': exercise.id}) }}">edit</a>

    {{ include('exercise/_delete_form.html.twig') }}
{% endblock %}
