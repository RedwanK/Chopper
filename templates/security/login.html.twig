{% extends 'layout-admin.html.twig' %}

{% block title %}{{ 'app.global.connexion'|trans }}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row login-form-wrapper">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            {{ 'app.logged.in'|trans }} {{ app.user.username }}, <a href="{{ path('app_logout') }}">{{ 'app.global.logout'|trans }}</a>
                        </div>
                    {% endif %}

                    <h1 class="h3 mb-3 font-weight-normal">{{ 'app.global.login'|trans }}</h1>
                    <label for="inputEmail">{{ 'app.login.email'|trans }}</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                    <label for="inputPassword">{{ 'app.login.password'|trans }}</label>
                    <input type="password" name="password" id="inputPassword" class="form-control mb-3" required>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}

                    <button class="float-right btn btn-lg btn-primary" type="submit">
                        {{ 'app.global.sign-in'|trans }}
                    </button>
                </form>
            </div>
            <div class="col-md-3"></div>
            {% include "_footer.html.twig" %}
        </div>
    </div>
{% endblock %}
{% block footer %}{% endblock %}
